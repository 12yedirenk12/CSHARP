namespace ifelse1
{
    class Program
    {
        static void Main(string[] args)
        {
            double sinav1, sinav2, ortalama;

            Console.WriteLine();
            Console.Write("Vize sınavını giriniz: ");
            sinav1 = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine();
            Console.Write("Final sınavını giriniz: ");
            sinav2 = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine();
            ortalama = (sinav1 + sinav2) / 2;
            
                { 
            if (sinav1 < 0 && sinav1 > 100 && sinav2 < 0 && sinav2 > 100)
            {
                Console.WriteLine("Lütfen 1 ile 100 arasında bir sayı giriniz!!!");
                
            }

            else if (ortalama < 29)
            {
                Console.WriteLine("NOTUNUZ: " + ortalama + " FF İLE KALDINIZ ");
            }
            else if (ortalama < 49)
            {
                Console.WriteLine("NOTUNUZ: " + ortalama + " FD İLE KALDINIZ ");
            }
            else if (ortalama < 54)
            {
                Console.WriteLine("NOTUNUZ: " + ortalama + " DC İLE ŞARTLI GEÇTİNİZ ");
            }
            else if (ortalama < 59)
            {
                Console.WriteLine("NOTUNUZ: " + ortalama + " DD İLE ŞARTLI GEÇTİNİZ ");
            }
            else if (ortalama < 64)
            {
                Console.WriteLine("NOTUNUZ: " + ortalama + " CC İLE GEÇTİNİZ ");
            }
            else if (ortalama < 69)
            {
                Console.WriteLine("NOTUNUZ: " + ortalama + " CB İLE GEÇTİNİZ ");
            }
            else if (ortalama < 79)
            {
                Console.WriteLine("NOTUNUZ: " + ortalama + " BB İLE GEÇTİNİZ ");
            }
            else if (ortalama < 89)
            {
                Console.WriteLine("NOTUNUZ: " + ortalama + " BA İLE GEÇTİNİZ ");
            }
            else if (ortalama <= 100)
            {
                Console.WriteLine("NOTUNUZ: " + ortalama + " AA İLE GEÇTİNİZ ");
            }
            else 
            {
                Console.WriteLine("LÜTFEN GEÇERLİ BİR SAYI GİRİNİZ!");
            }
            }
            Console.ReadLine();
        }
    }
}
